<div class="max-w-7xl mx-auto px-4 py-3">
  <h1 class="text-xl font-bold">Pesquisar Notícias</h1>
  <%= form_with url: "/search", method: :get, local: true do |form| %>
    <%= form.text_field :q, placeholder: "Digite um tópico...", class: "border p-2 w-full" %>
    <%= form.submit "Buscar", class: "mt-2 bg-blue-500 text-white px-4 py-2 rounded cursor-pointer" %>
  <% end %>
</div>
