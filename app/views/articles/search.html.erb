<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 p-6">
  <% @articles.each do |article| %>
    <div class="border p-4 rounded shadow">
      <h2 class="font-bold text-lg"><%= article[:title] %></h2>
      <p class="text-sm text-gray-500"><%= article[:source] %></p>
      <a href="<%= article[:url] %>" class="text-blue-600 underline" target="_blank">Leia mais</a>
      <% if user_signed_in? %>
        <%= form_with url: save_later_path, method: :post do %>
          <%= hidden_field_tag :title, article[:title] %>
          <%= hidden_field_tag :url, article[:url] %>
          <%= hidden_field_tag :source, article[:source] %>
          <%= submit_tag "ğŸ“Œ Salvar para Mais Tarde", class: "mt-2 bg-green-500 text-white px-2 py-1 rounded cursor-pointer" %>
        <% end %>
      <% end %>

    </div>
  <% end %>
</div>
